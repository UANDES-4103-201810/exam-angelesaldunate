
<p>
  <h1>Pizza <%= @recipe.name %></h1>

</p>

<table class="table">
  <thead class="thead-light">
  <tr>
    <th scope="col" >Ingredients</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @ingredients.each do |ingredient| %>
    <tr>
      <td><%= ingredient.name %></td>
    </tr>
  <% end %>

  </tbody>
</table>
<ul class="list-group">
  <li class="list-group-item">Base Price: $<%=@recipe.price %></li>
</ul>
<br>
<h6>Crust Options :</h6>
<%= form_tag("/pizza_orders", method: "post") do %>
  <%= label_tag(:crust, "Regular") %>
  <%= radio_button_tag(:crust_id, 1) %>
  <%= label_tag(:crust, "Thin") %>
  <%= radio_button_tag(:crust_id, 2) %>
  <%= hidden_field_tag(:recipe_id, @recipe.id) %>

  <%= submit_tag("Add To Cart") %>
<% end %>


<br>

